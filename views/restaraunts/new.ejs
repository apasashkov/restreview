
<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center">Add New Restaraunt </h1>
    <div  style="width:30%;margin:30px auto;">
    <form action="/restaraunts" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="name" placeholder="Name">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="img" placeholder="Image url">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="desc" placeholder="Description">
      </div>
      <div class="form-group">
          <input class="form-control" type="text" name="location" id="location" placeholder="Location">
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="price" placeholder="Price"  step="0.01">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-block btn-primary">Submit</button>
      </div>
      <a href="/">Go back</a>
    </form>
    </div>


  </div>

</div>
<% include ../partials/footer %>
