

<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center">Edit <%=restaraunt.name%></h1>
    <div  style="width:30%;margin:30px auto;">
      <form action="/restaraunts/<%=restaraunt._id%>/?_method=PUT" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="restaraunt[name]" value=<%=restaraunt.name%>> 
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="restaraunt[image]" value="<%=restaraunt.image%>">
      </div>
      <div class="form-group">
        <input class="form-control" type="text" name="restaraunt[description]" value="<%=restaraunt.description%>">
      </div>
      <div class="form-group">
          <input class="form-control" type="text" name="location" id="location" value="<%= restaraunt.location %>">
      </div>
      <div class="form-group">
        <input class="form-control" type="number" name="restaraunt[price]" value="<%=restaraunt.price%>" step="0.01">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-block btn-primary">Edit!</button>
      </div>
      <a href="/">Go back</a>
    </form>
    </div>


  </div>

</div>
<% include ../partials/footer %>
