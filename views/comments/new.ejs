<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align:center">Add New Comment to <%=restaraunt.name %></h1>
    <div  style="width:30%;margin:30px auto;">
      <form action="/restaraunts/<%= restaraunt._id%>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="Text">
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-block btn-primary">Submit</button>
      </div>
      <a href="/">Go back</a>
      </form>
    </div>
  </div>
</div>




